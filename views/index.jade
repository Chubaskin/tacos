extends layout
block menu
  nav.menu
    ul
      li 
        a Inicio
      li 
        a Misiones
      li 
        a soporte
      li 
        a contacto
      li 
        a salir 

block content

  header
    .container-fluid
      .row
        .col-xs-12.col-md-12
          h1= title
          h3 Bienvenido a #{title}

  // Wrapper
  #wrapper

    section.score
      // PUNTAJE
      #userInfo
      .container-fluid
        .row
          .col-xs-12.col-md-12
            h2.mora Puntaje Misiones
            hr.hrMora
          .col-xs-12.col-md-12
            p
                strong Name:
                |  <span id='userInfoName'>#{Jugador.nombreCompleto}</span>
                br
                strong Puntos:
                |  <span id='userInfoTotal'>#{Jugador.userPointsTotal}</span>
                br
                strong Puntos Curso:
                |  <span id='courseInfoTotal'>#{Jugador.userPointsClass}</span>
        // /PUNTAJE

        // Estado
        col-xs-12.col-md-12
            form(action="/postestado" method="POST" enctype="multipart/form-data")
                textarea.form-control(name="comentario" placeholder="¿qué onda?")
                input.form-control(type="submit" value="Publicar" class="btn-magda")
                // /Estado
          

    section.comentarios
      // COMENTARIOS
      h2 Comentarios
      .container-fluid
        .row
          each item in comentario
            .col-xs-12.col-md-12
              h4.text-center Com: #{item.texto}
      // /COMENTARIOS
  // /WRAPPER
